<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="ResourceName">
    <LinearLayout
        android:id="@+id/ftx_title_up_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:orientation="vertical"
        android:visibility="gone">
        <TextView
            android:id="@+id/ftx_title_up_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/ftx_dimen4dp"
            android:text="一刀99，不花钱，贪玩蓝月一刀99，不花钱"
            android:gravity="center"
            android:textColor="@color/white"/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/ftx_content_rl"
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <SurfaceView
            android:id="@+id/ftx_content_sv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/ftx_content_transparent_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparent"/>

        <ImageView
            android:id="@+id/ftx_content_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/img_default"/>
        <ProgressBar
            android:id="@+id/ftx_content_pb"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>
        <TextView
            android:id="@+id/ftx_content_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/ftx_dimen4dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/ftx_dimen8dp"
            android:layout_marginBottom="@dimen/ftx_dimen8dp"
            android:text="00:00"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/ftx_title_down_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray"
        android:orientation="vertical">
        <TextView
            android:id="@+id/ftx_title_down_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/ftx_dimen4dp"
            android:text="一刀99，不花钱，贪玩蓝月一刀99，不花钱"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/black"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/ftx_bottom_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/ftx_bottom_advert_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_biankuang_gray_bg"
                android:layout_marginTop="@dimen/ftx_dimen4dp"
                android:layout_marginBottom="@dimen/ftx_dimen4dp"
                android:layout_marginLeft="@dimen/ftx_dimen8dp"
                android:padding="@dimen/ftx_dimen1dp"
                android:text="广告"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:textColor="@color/gray"/>
            <TextView
                android:id="@+id/ftx_bottom_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/ftx_dimen4dp"
                android:layout_marginTop="@dimen/ftx_dimen4dp"
                android:layout_marginBottom="@dimen/ftx_dimen4dp"
                android:layout_marginLeft="@dimen/ftx_dimen8dp"
                android:text="范特西视频"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:textColor="@color/dark_gray"/>

        </LinearLayout>
        <TextView
            android:id="@+id/ftx_bottom_download_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_biankuang_blue_bg"
            android:padding="@dimen/ftx_dimen4dp"
            android:layout_marginTop="@dimen/ftx_dimen4dp"
            android:layout_marginBottom="@dimen/ftx_dimen4dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/ftx_dimen8dp"
            android:text="立即下载"
            android:gravity="center"
            android:textColor="@color/sky_blue"/>
    </RelativeLayout>
</LinearLayout>
